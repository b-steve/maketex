#!/bin/bash

## Flags:
## -k to knit.
## -b to bibtex.
## -g to glossary.
## -e to embed R fonts.
## -a to do all of the above.
## -c to clean.

## Note:
## Don't place any figures that aren't generated by knitr in figure/ or
## you're fucked when you use -c.

doknit=false
dobib=false
dogloss=false
doclean=false
doembed=false
while getopts ":aklgbce" opt; do
    case $opt in
	a)
	    doknit=true
	    dobib=true
	    dogloss=true
	    doembed=true
	    ;;
	k)
	    doknit=true
	    ;;
	b)
	    dobib=true
	    ;;
	g)
	    dogloss=true
	    ;;
	c)
	    doclean=true
	    ;;
	e)
	    doembed=true
	    ;;
	\?)
	    echo "Invalid option: -${OPTARG}." >&2
	    ;;
    esac
done
prefix=${!OPTIND}
## Throwing error for no argument provided.
if [ -z "$prefix" ]; then
    echo "ERROR: No file prefix given." >&2
    exit 1
fi
## Checking for presence of a .Rnw file.
if [ -a "$prefix".Rnw ]; then
    rnw_exists=true
else
    rnw_exists=false
    if [ "$doknit" = true ]; then
	echo "ERROR: .Rnw doesn't exist." >&2
	exit 2
    fi
fi
## Cleaning.
if [ "$doclean" = true ]; then
    echo "Cleaning..."
    rm -rfv *~ "$prefix".acn "$prefix".acr  "$prefix".alg "$prefix".aux "$prefix".bbl "$prefix".blg "$prefix".glg "$prefix".glo "$prefix".gls "$prefix".ist "$prefix".log "$prefix".nlg "$prefix".nlg5 "$prefix".not "$prefix".not5 "$prefix".ntn "$prefix".ntn5 "$prefix".out "$prefix".pdf "$prefix".toc "$prefix".nav "$prefix".snm "$prefix".spc "$prefix".spe "$prefix".sps texput.log
    ## Warnings when flags set while cleaning.
    if [ "$rnw_exists" = true ]; then
	rm -rfv "$prefix".tex cache figure
    fi
    if [ "$doknit" = true ]; then
	echo "WARNING: Cleaning, option -k ignored." >&2
    fi
    if [ "$dobib" = true ]; then
        echo "WARNING: Cleaning, option -b ignored." >&2
    fi
    if [ "$dogloss" = true ]; then
	echo "WARNING: Cleaning, option -g ignored." >&2
    fi
else
    ## Knitting.
    if [ "$doknit" = true ]; then
	echo "Knitting..."
	R --slave -e "library(knitr); knit('${prefix}.Rnw')"
	## Error if not knitting and no .tex exists.
    else
	if ! [ -a "$prefix".tex ]; then
	    echo "ERROR: .tex doesn't exist." >&2
	    exit 3
	fi
    fi
    ## Embedding fonts.
    if [ "$doembed" = true ]; then
	echo "Embedding fonts..."
	mkdir -p figure
	cd figure/
	R --slave -e "library(extrafont); files <- list.files(pattern = '.pdf'); for (i in files) embed_fonts(i, outfile = i)"
	cd ..
    fi
    pdflatex "$prefix"
    ## Bibtexing.
    if [ "$dobib" = true ]; then
	echo "Bibtexing..."
	bibtex "$prefix"
    fi
    ## Glossary-ing.
    if [ "$dogloss" = true ]; then
	echo "Glossary-ing..."
	makeglossaries "$prefix"
    fi
    ## Compiling .pdf.
    pdflatex "$prefix"
    pdflatex "$prefix"
fi
